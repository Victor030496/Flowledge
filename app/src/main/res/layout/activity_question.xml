<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:design="http://schemas.android.com/apk/res-auto"
tools:context=".QuestionActivity">


    <LinearLayout
        android:id="@+id/principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="55dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <ScrollView
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagen"
                    android:layout_width="200dp"
                    android:layout_height="170dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/pregunta"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haz una pregunta "
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:layout_height="fill_parent">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/categoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingrese la categoria de la pregunta"
                        android:textSize="10pt">
                    </TextView>

                    <Spinner
                        android:textAlignment="center"
                        android:background="@drawable/spinner_background"
                        android:layout_marginTop="20dp"
                        android:id="@+id/spinner"
                        android:hint="eje: Arboles, Listas, BD...."
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/descripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Escriba su pregunta"
                        android:textSize="10pt">
                    </TextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                    <EditText
                        android:id="@+id/descripcion2"
                        android:layout_width="270dp"
                        android:layout_height="50dp"
                        android:inputType="text"></EditText>

                        <ImageView
                            android:id="@+id/camara"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:src="@drawable/camara"
                            android:layout_gravity="bottom"
                             />

                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enviar"
                        android:id="@+id/btn_enviar" />


                </LinearLayout>
            </LinearLayout>


        </ScrollView>
    </LinearLayout>



    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NavBot"
        android:layout_gravity="bottom"
        design:menu="@menu/menu_nav"
        />

</android.support.design.widget.CoordinatorLayout>