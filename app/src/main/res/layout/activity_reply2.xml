<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    tools:context=".AnswerActivity">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip">

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:paddingLeft="16dp"
            android:src="@drawable/usuarion" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:paddingRight="16dp"
        android:text="bvbvbfvfdbfd"
        android:textColor="#009688"
        android:textSize="22dip"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="bnmbmb,mb,mb,mbnm"
        android:textColor="#0f0f0a"
        android:textSize="21dip"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDescription"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imglike2"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:paddingLeft="16dp"
            android:src="@drawable/cora" />
        <ImageView
            android:id="@+id/imgTrash2"
            android:visibility="invisible"
            android:layout_width="42dip"
            android:layout_height="47dip"
            android:paddingLeft="16dp"
            android:src="@drawable/trash" />
        <TextView
            android:id="@+id/txtlikes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="16dp"
            android:paddingTop="5dp"
            android:paddingRight="16dp"
            android:text="0"
            android:textColor="#009688"
            android:textSize="25dip"
            android:textStyle="normal" />


    </LinearLayout>

</RelativeLayout>








